{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "interchain-tokenlist schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "pattern": "^(?:\\.\\.\\/)+schemas\\/interchain-tokenlist\\.schema\\.json$"
    },
    "name": { "type": "string" },
    "version": { "$ref": "#/definitions/version" },
    "tokens": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/interchainToken" }
    }
  },
  "required": ["$schema", "name", "version", "tokens"],
  "additionalProperties": false,
  "definitions": {
    "IconUrlsSchema": {
      "type": "object",
      "properties": { "svg": { "type": "string", "format": "uri" } },
      "required": ["svg"],
      "additionalProperties": false
    },
    "chains": {
      "type": "object",
      "properties": {
        "axelarChainId": { "type": "string" },
        "tokenAddress": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "tokenManager": {
          "$ref": "#/definitions/chains/properties/tokenAddress"
        },
        "tokenManagerType": { "type": "string" },
        "name": { "type": "string" },
        "symbol": { "type": "string" }
      },
      "required": [
        "axelarChainId",
        "tokenAddress",
        "tokenManager",
        "tokenManagerType",
        "name",
        "symbol"
      ],
      "additionalProperties": false
    },
    "interchainToken": {
      "type": "object",
      "properties": {
        "tokenId": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
        "deployer": { "$ref": "#/definitions/chains/properties/tokenAddress" },
        "originalMinter": {
          "anyOf": [
            {
              "$ref": "#/definitions/chains/properties/tokenAddress"
            },
            { "type": "null" }
          ]
        },
        "prettySymbol": { "type": "string" },
        "decimals": { "type": "integer" },
        "name": { "type": "string" },
        "originAxelarChainId": { "type": "string" },
        "tokenType": { "type": "string" },
        "iconUrls": { "$ref": "#/definitions/IconUrlsSchema" },
        "deploySalt": { "type": "string" },
        "chains": {
          "type": "array",
          "items": { "$ref": "#/definitions/chains" }
        },
        "coinGeckoId": { "type": "string" },
        "deploymentMessageId": { "type": "string" }
      },
      "required": [
        "tokenId",
        "deployer",
        "originalMinter",
        "prettySymbol",
        "decimals",
        "originAxelarChainId",
        "tokenType",
        "iconUrls",
        "deploySalt",
        "chains",
        "deploymentMessageId"
      ],
      "additionalProperties": false
    },
    "version": {
      "type": "object",
      "properties": {
        "major": { "type": "integer" },
        "minor": { "type": "integer" },
        "patch": { "type": "integer" }
      },
      "required": ["major", "minor", "patch"],
      "additionalProperties": false
    }
  }
}
